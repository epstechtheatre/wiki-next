:root{
    //Colour Themes
    --lightAccentColour: #3eaf7c;
    --lightTextColour: #2c3e50;
    --lightBackgroundColour: #fff;
    --lightBorderColour: #eaecef;

    --lightSidebarColour: #fff;
    --lightNavbarColour: #fff;
    
    --darkAccentColour: #3eaf7c;
    --darkTextColour: #ddd8ca;
    --darkBackgroundColour: #232b32;
    --darkBorderColour: #333;

    --darkSidebarColour: var(--darkBackgroundColour);
    --darkNavbarColour: var(--darkBackgroundColour);
    
    --codeBgColour: #282c34;
    
