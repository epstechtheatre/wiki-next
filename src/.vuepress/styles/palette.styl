@import "./colour-vars"

:root{   
    // layout
    --navbarHeight: 3.6rem;
    --sidebarWidth: 20rem;
    --contentWidth: 740px;
    --homePageWidth: 960px;
    
    // responsive breakpoints
    --MQNarrow: 959px;
    --MQMobile: 719px;
    --MQMobileNarrow: 419px;

    //Colour Themes (to override)
    --lightAccentColour: #3eaf7c;
    --lightTextColour: #2c3e50;
    --lightBackgroundColour: $white;
    --lightBorderColour: #eaecef;

    --lightSidebarColour: $white;
    --lightNavbarColour: $white;
    
    --darkAccentColour: #3eaf7c;
    --darkTextColour: #dcddde;
    --darkBackgroundColour: #232b32;
    --darkBorderColour: #333;

    --darkSidebarColour: var(--darkBackgroundColour);
    --darkNavbarColour: var(--darkBackgroundColour);
    
    --codeBgColour: #282c34;
    
} //Non-dark theme
:root {
    --accentColour: var(--lightAccentColour);
    --textColour: var(--lightTextColour);
    --backgroundColour: var(--lightBackgroundColour);
    --borderColour: var(--lightBorderColour);
    --sidebarColour: var(--lightSidebarColour);
    --navbarColour: var(--lightNavbarColour);

    --shade: $white
    --shade-1: $grey-lighten-1
    --shade-2: $grey-lighten-2
    --shade-3: $grey-lighten-3
    --shade-4: $grey-lighten-4
    --shade-5: $grey-lighten-5

    --shade-i-1: $grey
    --shade-i-2: $grey-darken-1
    --shade-i-3: $grey-darken-2
    --shade-i-4: $grey-darken-3
    --shade-i-5: $grey-darken-4

    //Material Base Colours
    --color-red: $red
    --color-pink: $pink
    --color-purple: $purple
    --color-deep-purple: $deep-purple
    --color-indigo: $indigo
    --color-blue: $blue
    --color-light-blue: $light-blue
    --color-cyan: $cyan
    --color-teal: $teal
    --color-green: $green
    --color-light-green: $light-green
    --color-lime: $lime
    --color-yellow: $yellow
    --color-amber: $amber
    --color-orange: $orange
    --color-deep-orange: $deep-orange
    --color-brown: $brown
    --color-blue-grey: $blue-grey
    --color-grey: $grey
}

:root.dark {
    --accentColour: var(--darkAccentColour);
    --textColour: var(--darkTextColour);
    --backgroundColour: var(--darkBackgroundColour);
    --borderColour: var(--darkBorderColour);
    --sidebarColour: var(--darkSidebarColour);
    --navbarColour: var(--darkNavbarColour);

    --shade: $black
    --shade-1: $grey
    --shade-2: $grey-darken-1
    --shade-3: $grey-darken-2
    --shade-4: $grey-darken-3
    --shade-5: $grey-darken-4

    --shade-i-1: $grey-lighten-1
    --shade-i-2: $grey-lighten-2
    --shade-i-3: $grey-lighten-3
    --shade-i-4: $grey-lighten-4
    --shade-i-5: $grey-lighten-5

    --color-red: $red-darken-4
    --color-pink: $pink-darken-4
    --color-purple: $purple-darken-4
    --color-deep-purple: $deep-purple-darken-4
    --color-indigo: $indigo-darken-4
    --color-blue: $blue-darken-4
    --color-light-blue: $light-blue-darken-4
    --color-cyan: $cyan-darken-4
    --color-teal: $teal-darken-4
    --color-green: $green-darken-4
    --color-light-green: $light-green-darken-4
    --color-lime: $lime-darken-4
    --color-yellow: $yellow-darken-4
    --color-amber: $amber-darken-4
    --color-orange: $orange-darken-4
    --color-deep-orange: $deep-orange-darken-4
    --color-brown: $brown-darken-4
    --color-blue-grey: $blue-grey-darken-4
    --color-grey: $grey-darken-4
}