    --navbarHeight: 3.6rem;
    --sidebarWidth: 20rem;
    --contentWidth: 740px;
    --homePageWidth: 960px;
    
    // responsive breakpoints
    --MQNarrow: 959px;
    --MQMobile: 719px;
    --MQMobileNarrow: 419px;

